{
  "name": "pixel-snake",
  "version": "1.0.0",
  "description": "Pixelart Snake as Electron desktop app with HTML fallback",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --win nsis",
    "build:portable": "electron-builder --win portable"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.pixelsnake.app",
    "productName": "Pixel Snake",
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
